<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

       <TextView
        android:id="@+id/tvLinks"
        android:layout_width="250dp"
        android:layout_height="50dp"
           android:layout_marginRight="60dp"
        android:text="Here you can find useful links for funding in your country!"
           android:textColor="@color/colorText"/>


    </LinearLayout>


    <TextView
        android:id="@+id/tvCroatia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/croatia"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvSerbia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serbia"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvBosnia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bosnia"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvSlovenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slovenia"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvHungary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hungary"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvPoland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/poland"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvRussia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/russia"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvUk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/UK"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvUsa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/USA"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tvCanada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/canada"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/world"
        android:layout_gravity="center"/>
</LinearLayout>